#!/bin/bash

clean_app() {
    rm -rf node_modules
    rm -rf bower_components
    rm -rf dist
    rm -rf tmp
    rm -rf electron-out
}

clean_addons() {
    cd lib/wsd-core
    rm -rf node_modules
    rm -rf bower_components

    cd ../..

    cd lib/ui-toolkit
    rm -rf node_modules
    rm -rf bower_components

    cd ../..
}

clean_backend() {
    cd ember-electron/backend

    rm -rf node_modules

    cd ../..
}

clean_app
clean_addons
clean_backend
