<rect class="overlay" fill="none" pointer-events="all" cursor="crosshair" x="0" y="0" width="{{width}}" height="{{height}}"></rect>

{{#if selection}}
    <rect class="left-selection" pointer-events="none" fill="#777777" fill-opacity="0.3" shape-rendering="crispEdges" x="0" y="0" width="{{selection.left}}" height="{{height}}"></rect>

    <rect class="selection" fill="none" pointer-events="none" x="{{selection.left}}" y="0" width="{{selection.width}}" height="{{height}}"></rect>

    <rect class="right-selection" pointer-events="none" fill="#777777" fill-opacity="0.3" shape-rendering="crispEdges" x="{{selection.right}}" y="0" width="{{width}}" height="{{height}}"></rect>
{{/if}}
