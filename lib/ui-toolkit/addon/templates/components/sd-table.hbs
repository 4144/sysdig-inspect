{{#if isBodyHeightKnown}}
    <div class="sd-table__wrap">
        <div class="sd-table__head">
            <div class="sd-table__head-row">
                {{#each columns key="id" as |column|}}
                    {{#if column.headComponentName}}
                        {{component
                            column.headComponentName
                            row=row
                            column=column
                        }}
                    {{else}}
                        <div class="sd-table__head-cell">
                            <div class="sd-table__cell-content">
                                {{column.name}}
                            </div>
                        </div>
                    {{/if}}
                {{/each}}
            </div>
        </div>
        <div class="sd-table__body">
            {{#virtual-each rowsData
                height=bodyHeight
                itemHeight=rowHeight
                rowPadding=5
                scrollTimeout=10
                data-ref="body"
                as |row|
            }}
                {{#sd-table-row
                    row=row.data
                    isSelected=row.isSelected
                    select=(action "select" row)
                    activate=(action "activate" row)
                    as |rowConfiguration|
                }}
                    {{#each rowConfiguration.data.columns key="@index" as |cell|}}
                        {{#if cell.configuration.cellComponentName}}
                            {{component
                                cell.configuration.cellComponentName
                                row=rowConfiguration.data
                                cell=cell
                                isHead=false
                                isRowMouseOver=rowConfiguration.isMouseOver
                                isRowSelected=rowConfiguration.data.isSelected
                                click=(action cell.configuration.clickAction target=parentView)
                            }}
                        {{else}}
                            <div class="sd-table__cell">
                                <div class="sd-table__cell-content">
                                    {{cell.value}}
                                </div>
                            </div>
                        {{/if}}
                    {{/each}}
                {{/sd-table-row}}
            {{/virtual-each}}
        </div>
    </div>
{{/if}}